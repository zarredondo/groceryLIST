<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipeFragmentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/recipeFragmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignTop="@+id/recipeFragmentImage"
        android:layout_alignBottom="@+id/recipeFragmentImage"
        android:layout_toRightOf="@+id/recipeFragmentImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="TextView"/>

